<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Stability" name="stability-iterative-android-tests">
    <set name="iterative" type="pyunit">
      <testcase component="Stability/Iterative" execution_type="auto" id="Crosswalk_Stabiterative_Install_Uninstall" purpose="Validate the app can be install/uninstall 2 hours">
        <description>
          <test_script_entry>/opt/stability-iterative-android-tests/iterative/Install_Uninstall_Repeatedly.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Stability/Iterative" execution_type="auto" id="Crosswalk_Stabiterative_Launch_Exit" purpose="Validate the app can be launch/exit 4 hours">
        <description>
          <test_script_entry>/opt/stability-iterative-android-tests/iterative/Launch_Exit_Repeatedly.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Stability/Recovery" execution_type="auto" id="Pause_Resume_Webapp_Repeatedly" purpose="Validate the app can be pause/resume repeatedly">
        <description>
          <test_script_entry>/opt/stability-iterative-android-tests/iterative/Pause_Resume_Webapp_Repeatedly.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Stability/Iterative" execution_type="auto" id="Switch_Between_NativeAndWebApp" purpose="Validate the app can be switched repeatedly between native apps and web apps">
        <description>
          <test_script_entry>/opt/stability-iterative-android-tests/iterative/Switch_Between_NativeAndWebApp.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Stability/Iterative" execution_type="auto" id="Switch_Between_WebApps" purpose="Validate the app can be switched repeatedly between web apps">
        <description>
          <test_script_entry>/opt/stability-iterative-android-tests/iterative/Switch_Between_WebApps.py</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
