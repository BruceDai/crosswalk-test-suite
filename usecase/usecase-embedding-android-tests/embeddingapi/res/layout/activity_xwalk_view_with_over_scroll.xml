<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.xwalk.embedded.api.sample.extended.XWalkViewWithOverScroll">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="If onOverScrolled is invoked, below will show the 'onOverScrolled is invoked' and the parameter list will be shown too"
        android:id="@+id/textView" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_label"
        android:layout_below="@+id/textView"/>
    <org.xwalk.embedded.api.sample.extended.MyXWalkView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scroll_xwalk_view"
        android:layout_below="@+id/scroll_label" />

</RelativeLayout>
