<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.android.webview.api.sample.basic.WebViewWithMultiInstanceOverlay">

    <TextView
        android:id="@+id/case_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="@string/webview_with_multi_instance_overlay" />

    <TextView
        android:id="@+id/invoked_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/case_desc"
        android:textSize="18sp"
        android:textColor="#00ff00" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swap XWalkView"
        android:id="@+id/swap_button"
        android:layout_below="@+id/invoked_info"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_below="@id/swap_button"
        android:id="@+id/overlay_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </FrameLayout>

</RelativeLayout>