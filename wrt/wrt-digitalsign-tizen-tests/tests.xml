<test_definition>
  <suite category="Runtime_Core" name="wrt-digitalsign-tizen-tests">
    <set name="rtcoreauto" type="script">
      <testcase component="Crosswalk WRT/Digital Signature" execution_type="auto" id="Crosswalk_Digital_Signature_Error" purpose="Validate if the app can install with a bad Digital Signature">
        <description>
          <test_script_entry>app_user@/home/app/content/tct/opt/wrt-digitalsign-tizen-tests/digitalsign/Crosswalk_Digital_Signature_Error.sh </test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk WRT/Digital Signature" execution_type="auto" id="Crosswalk_Digital_Signature_Package" purpose="Validate if the app can install with the correct Digital Signature">
        <description>
          <test_script_entry>app_user@/home/app/content/tct/opt/wrt-digitalsign-tizen-tests/digitalsign/Crosswalk_Digital_Signature_Package.sh </test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>