<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite name="wrt-packagemgtmanu-tizen-tests" category="Package_Management_on_Tizen">
    <set name="packagemgtmanu" type="js">
      <testcase purpose="Validate if web app icon display normally" type="Functional" status="designed" component="Package Management On Tizen" execution_type="manual" priority="P1" id="Crosswalk_App_Icon">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
            2.Make sure there some webapps are available.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_App_Icon.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support that web app could be launched from app launcher successfully" type="Functional" status="designed" component="Package Management On Tizen" execution_type="manual" priority="P1" id="Crosswalk_App_Icon_Launcher">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
            2.Make sure there some webapps are available.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_App_Icon_Launcher.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support web apps could be uninstalled successfully" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P1" id="Crosswalk_WebApp_Uninstall">
        <description>
          <pre_condition>
            1.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_WebApp_Uninstall.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk support that web app could be launched successfully" type="Functional" status="designed" component="Package Management On Tizen" execution_type="manual" priority="P0" id="Crosswalk_WebApp_Launch">
        <description>
          <pre_condition>
            1.Make sure Crosswalk application is launched
            2.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_WebApp_Launch.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if Crosswalk support to Update the installed Widget" type="Functional" status="designed" component="Package Management On Tizen" execution_type="manual" priority="P1" id="Crosswalk_Wiget_Update_SameVersion">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed;
            2.Make sure the wgt tct-2dtransforms-css3-tests.wgt is installed.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_Wiget_Update_SameVersion.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk could debug by remote host" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P1" id="Crosswalk_Remote_Debugging_Connection">
        <description>
          <pre_condition>
            1.Make sure Crosswalk is installed.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_Remote_Debugging_Connection.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk viewed webpage could be modified by remote debug" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P2" id="Crosswalk_Remote_Debugging_CheckInfo">
        <description>
          <pre_condition>
            1.Make sure Crosswalk lanunched by remote debug mode.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_Remote_Debugging_CheckInfo.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate Crosswalk viewed webpage could be modified by remote debug" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P2" id="Crosswalk_Remote_Debugging_Modification">
        <description>
          <pre_condition>
            1.Make sure Crosswalk lanunched by remote debug mode.
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_Remote_Debugging_Modification.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if webapp folder is create after the webapp installed successfully" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P1" id="Crosswalk_WebApp_Install_Resource">
        <description>
          <pre_condition>
            1.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_WebApp_Install_Resource.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if webapp cache file is deleted after the webapp uninstalled successfully" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P1" id="Crosswalk_WebApp_Uninstall_Resource">
        <description>
          <pre_condition>
            1.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_WebApp_Uninstall_Resource.html</test_script_entry>
        </description>
      </testcase>
      <testcase purpose="Validate if webapp isolated partition cache is created after run the app" type="Functional" status="approved" component="Package Management On Tizen" execution_type="manual" priority="P1" id="Crosswalk_WebApp_Launcher_Cache">
        <description>
          <pre_condition>
            1.Make sure there some webapps are available
          </pre_condition>
          <test_script_entry>/opt/wrt-packagemgtmanu-tizen-tests/packagemgtmanu/Crosswalk_WebApp_Launcher_Cache.html</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
