<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Stability" name="wrt-stabrecovery-android-tests">
    <set name="stabrecovery" type="js">
      <testcase purpose="Validate pause and resume packaged web app a long time,no error" component="Stability" execution_type="manual" id="Crosswalk_Stabrecovery_PauseAndResume_PackagedWebapp">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed on device;
            2.Download package resources from otcqa to local;
          </pre_condition>
          <test_script_entry>/opt/wrt-stabrecovery-android-tests/stabrecovery/Crosswalk_Stabrecovery_PauseAndResume_PackagedWebapp.html </test_script_entry>
         </description>
       </testcase>
       <testcase purpose="Validate pause and resume packaged web app a long time,no error" component="Stability" execution_type="manual" id="Crosswalk_Stabrecovery_PauseAndResume_Hostapp">
        <description>
          <pre_condition>
            1.Make sure Crosswalk binary is installed on device;
            2.Download package resources from otcqa to local;
          </pre_condition>
          <test_script_entry>/opt/wrt-stabrecovery-android-tests/stabrecovery/Crosswalk_Stabrecovery_PauseAndResume_Hostapp.html </test_script_entry>
         </description>
       </testcase>
    </set>
  </suite>
</test_definition>
