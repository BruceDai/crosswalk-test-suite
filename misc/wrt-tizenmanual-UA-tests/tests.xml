<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Runtime_HexGL_Gallery" name="wrt-tizenmanual-UA-tests">
    <set name="RuntimHexGLGallery" type="js">
      <testcase component="Crosswalk Sample App" execution_type="manual" id="Crosswalk_SampleApp_HexGL_Launch" purpose="Validate sample app HexGL could be launched successfully">
        <description>
          <pre_condition>
            1.Make sure HexGL webapp is launched;
            2.Make sure HexGL webapp is installed on Tizen OS.
          </pre_condition>
          <test_script_entry>/opt/wrt-tizenmanual-UA-tests/tizenua/Crosswalk_SampleApp_HexGL_Launch.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Sample App" execution_type="manual" id="Crosswalk_SampleApp_HexGL_Close" purpose="Validate sample app HexGL could be closed successfully">
        <description>
          <pre_condition>
            1.Make sure HexGL webapp is launched;
            2.Make sure HexGL is running.
          </pre_condition>
          <test_script_entry>/opt/wrt-tizenmanual-UA-tests/tizenua/Crosswalk_SampleApp_HexGL_Close.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Sample App" execution_type="manual" id="Crosswalk_SampleApp_HexGL_Icon" purpose="Validate if sample app HexGL icon display normally">
        <description>
          <pre_condition>
            1.Make sure HexGL webapp is launched;
            2.Make sure HexGL is available.
          </pre_condition>
          <test_script_entry>/opt/wrt-tizenmanual-UA-tests/tizenua/Crosswalk_SampleApp_HexGL_Icon.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Sample App" execution_type="manual" id="Crosswalk_SampleApp_Gallery_Launch" purpose="Validate if sample app Gallery could be launched successfully">
        <description>
          <pre_condition>
            1.Make sure the Gallery webapp is installed;
            1.Make sure the Gallery webapp is launched.
          </pre_condition>
          <test_script_entry>/opt/wrt-tizenmanual-UA-tests/tizenua/Crosswalk_SampleApp_Gallery_Launch.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Sample App" execution_type="manual" id="Crosswalk_SampleApp_Gallery_Close" purpose="Validate if sample app Gallery could be closed successfully">
        <description>
          <pre_condition>
            1.Make sure the Gallery webapp is launched.
          </pre_condition>
          <test_script_entry>/opt/wrt-tizenmanual-UA-tests/tizenua/Crosswalk_SampleApp_Gallery_Close.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Sample App" execution_type="manual" id="Crosswalk_SampleApp_Gallery_Icon" purpose="Validate if sample app Gallery icon display normally">
        <description>
          <pre_condition>
            1.Make sure Gallery webapp is installed;
            2.Make sure Gallery webapp is available.
          </pre_condition>
          <test_script_entry>/opt/wrt-tizenmanual-UA-tests/tizenua/Crosswalk_SampleApp_Gallery_Icon.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Sample App" execution_type="manual" id="Crosswalk_SampleApp_HexGL_AppFunction" purpose="Validate if sample app HexGL function could work well">
        <description>
          <pre_condition>
            1.Make sure HexGL webapp is launched.
          </pre_condition>
          <test_script_entry>/opt/wrt-tizenmanual-UA-tests/tizenua/Crosswalk_SampleApp_HexGL_AppFunction.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk Sample App" execution_type="manual" id="Crosswalk_SampleApp_Gallery_AppFunction" purpose="Validate if sample app Gallery function could work well">
        <description>
          <pre_condition>
            1.Make sure the Gallery webapp is launched.
          </pre_condition>
          <test_script_entry>/opt/wrt-tizenmanual-UA-tests/tizenua/Crosswalk_SampleApp_Gallery_AppFunction.html</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
