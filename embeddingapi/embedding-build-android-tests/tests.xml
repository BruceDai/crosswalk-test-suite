<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Crosswalk_Packer_Tool" name="embedding-build-android-tests">
    <set name="build_auto" type="pyunit">
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_ant_build_app" purpose="Validate app using crosswalk can be built with ant">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/ant/crosswalk_ant_build_app.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_local_gradle_build_app" purpose="Validate app using local crosswalk can be built with gradle">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/gradle/crosswalk_local_gradle_build_app.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_local_gradle_build_all_app" purpose="Validate app using local crosswalk can be built to ia and arm apks concurrently with gradle">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/gradle/crosswalk_local_gradle_build_all_app.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_online_gradle_build_app" purpose="Validate app using online crosswalk can be built with gradle">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/gradle/crosswalk_online_gradle_build_app.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_online_gradle_build_all_app" purpose="Validate app using online crosswalk can be built to ia and arm apks concurrently with gradle">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/gradle/crosswalk_online_gradle_build_all_app.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_libphonenumber_gradle_build_app" purpose="Validate app using online crosswalk and libphonenumber can be built with gradle">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/gradle/crosswalk_libphonenumber_gradle_build_app.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_libphonenumber_gradle_build_all_app" purpose="Validate app using online crosswalk and libphonenumber can be built to ia and arm apks concurrently with gradle">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/gradle/crosswalk_libphonenumber_gradle_build_all_app.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_local_maven_build_app" purpose="Validate app using local crosswalk can be built with maven">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/maven/crosswalk_local_maven_build_app.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="auto" id="crosswalk_online_maven_build_app" purpose="Validate app using online crosswalk can be built with maven">
        <description>
          <test_script_entry>/opt/embedding-build-android-tests/maven/crosswalk_online_maven_build_app.py</test_script_entry>
        </description>
      </testcase>
    </set>
    <set name="packertool" type="js">
      <testcase component="Crosswalk API/Embedding Build" execution_type="manual" id="Crosswalk_Adt_Build_ARM_AndroidApp" purpose="Validate ARM version test app can be built with adt tool">
        <description>
          <pre_condition>
            1.Make sure device connected with ubuntu.
          </pre_condition>
          <test_script_entry>/opt/embedding-build-android-tests/adt/Crosswalk_Adt_Build_ARM_AndroidApp.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk API/Embedding Build" execution_type="manual" id="Crosswalk_Adt_Build_IA_AndroidApp" purpose="Validate IA version test app can be built with adt tool">
        <description>
          <pre_condition>
            1.Make sure device connected with ubuntu.
          </pre_condition>
          <test_script_entry>/opt/embedding-build-android-tests/adt/Crosswalk_Adt_Build_IA_AndroidApp.html</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
