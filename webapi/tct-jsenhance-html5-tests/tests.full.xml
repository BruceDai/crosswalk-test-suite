<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl"  href="./testcase.xsl"?>
<test_definition>
  <suite name="tct-jsenhance-html5-tests" category="W3C/HTML5 APIs">
    <set name="JSEnhance" type="js">
      <testcase purpose="Check if the document object has getElementsByClassName method" type="compliance" status="approved" component="WebAPI/DOM, Forms and Styles/DOM/JavaScript related HTML5 Enhancements" execution_type="auto" priority="P1" id="document_getElementsByClassName_exists">
        <description>
          <test_script_entry>/opt/tct-jsenhance-html5-tests/jsenhance/document_getElementsByClassName_exists.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion element_type="method" element_name="getElementsByClassName" interface="Document" specification="DOM/JavaScript related HTML5 Enhancements" section="DOM, Forms and Styles" category="Tizen W3C API Specifications"/>
            <spec_url>http://www.w3.org/TR/2011/WD-html5-20110525/dom.html#dom-document-getelementsbyclassname</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
