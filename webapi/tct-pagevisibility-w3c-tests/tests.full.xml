<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="W3C/HTML5 APIs" name="tct-pagevisibility-w3c-tests">
    <set name="PageVisibility" type="js">
      <testcase component="W3C_HTML5 APIs/Performance and Optimization/Page Visibility" execution_type="auto" id="test_attributes_exist" priority="P1" purpose="Page Visibility API Test" status="approved" type="compliance" subcase="4">
        <description>
          <test_script_entry>/opt/tct-pagevisibility-w3c-tests/pagevisibility/w3c/test_attributes_exist.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion category="Tizen W3C API Specifications" element_name="hidden" element_type="attribute" interface="DocumentVisibility" section="Performance and Optimization" specification="Page Visibility"/>
            <spec_url>http://www.w3.org/TR/page-visibility/#sec-document-interface</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase component="W3C_HTML5 APIs/Performance and Optimization/Page Visibility" execution_type="auto" id="test_child_document" priority="P2" purpose="Page Visibility API Child Document Test" status="approved" type="compliance" subcase="14">
        <description>
          <test_script_entry>/opt/tct-pagevisibility-w3c-tests/pagevisibility/w3c/test_child_document.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion category="Tizen W3C API Specifications" element_name="hidden" element_type="attribute" interface="DocumentVisibility" section="Performance and Optimization" specification="Page Visibility"/>
            <spec_url>http://www.w3.org/TR/page-visibility/#sec-document-interface</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase component="W3C_HTML5 APIs/Performance and Optimization/Page Visibility" execution_type="auto" id="test_default_view" priority="P2" purpose="Page Visibility Null Default View Test" status="approved" type="compliance" subcase="7">
        <description>
          <test_script_entry>/opt/tct-pagevisibility-w3c-tests/pagevisibility/w3c/test_default_view.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion category="Tizen W3C API Specifications" element_name="hidden" element_type="attribute" interface="DocumentVisibility" section="Performance and Optimization" specification="Page Visibility"/>
            <spec_url>http://www.w3.org/TR/page-visibility/#sec-document-interface</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase component="W3C_HTML5 APIs/Performance and Optimization/Page Visibility" execution_type="auto" id="test_read_only" priority="P2" purpose="Page Visibility API is Read Only Test" status="approved" type="compliance" subcase="4">
        <description>
          <test_script_entry>/opt/tct-pagevisibility-w3c-tests/pagevisibility/w3c/test_read_only.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion category="Tizen W3C API Specifications" element_name="hidden" element_type="attribute" interface="DocumentVisibility" section="Performance and Optimization" specification="Page Visibility"/>
            <spec_url>http://www.w3.org/TR/page-visibility/#sec-document-interface</spec_url>
            <spec_statement/>
          </spec>
        </specs>
      </testcase>
      <testcase component="W3C_HTML5 APIs/Performance and Optimization/Page Visibility" execution_type="manual" id="pagevisibility_DocumentVisibility_Hidden_lockScreen" priority="P3" purpose="Check if hidden attribute is false while the webpage from lock screen change to visible" status="approved" type="compliance">
        <description>
          <pre_condition/>
          <post_condition/>
          <steps>
            <step order="1">
              <step_desc>lock screen and then open the webpage after two seconds</step_desc>
              <expected>PASS</expected>
            </step>
          </steps>
          <test_script_entry timeout="90">/opt/tct-pagevisibility-w3c-tests/pagevisibility/pagevisibility_DocumentVisibility_hidden_lockScreen-manual.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion category="Tizen W3C API Specifications" interface="DocumentVisibility" section="Performance and Optimization" specification="Page Visibility" usage="true"/>
            <spec_url>http://www.w3.org/TR/page-visibility/</spec_url>
          </spec>
        </specs>
      </testcase>
      <testcase component="W3C_HTML5 APIs/Performance and Optimization/Page Visibility" execution_type="manual" id="pagevisibility_DocumentVisibility_Hidden_minimize" priority="P3" purpose="Check if hidden attribute is false while the webpage from minimize change to visible" status="approved" type="compliance">
        <description>
          <pre_condition/>
          <post_condition/>
          <steps>
            <step order="1">
              <step_desc>change to minimize and then open the webpage after two seconds</step_desc>
              <expected>PASS</expected>
            </step>
          </steps>
          <test_script_entry timeout="90">/opt/tct-pagevisibility-w3c-tests/pagevisibility/pagevisibility_DocumentVisibility_hidden_minimize-manual.html</test_script_entry>
        </description>
        <specs>
          <spec>
            <spec_assertion category="Tizen W3C API Specifications" interface="DocumentVisibility" section="Performance and Optimization" specification="Page Visibility" usage="true"/>
            <spec_url>http://www.w3.org/TR/page-visibility/</spec_url>
          </spec>
        </specs>
      </testcase>
    </set>
  </suite>
</test_definition>
