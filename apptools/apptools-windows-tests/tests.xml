<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Crosswalk App Tools" name="apptools-windows-tests">
    <set name="CLI" type="pyunit">
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_create_basic" purpose="Windows - Validate if project is created fail when the project has been exist">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/create_basic.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_pkgName" purpose="Windows - Validate project can be created with validate package naming rule" subcase="16">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/pkgName.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_build" purpose="Windows - Validate if project is built successfully with build command">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/build.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_update" purpose="Windows - Validate if project can be updated successfully with update command" subcase="5">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/update.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_version" purpose="Windows - Validate if version command can display version information">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/version.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_target_platforms" purpose="Windows - Validate if platforms command can list available target platforms">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/target_platforms.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_build_path" purpose="Windows - Validate if project can be built with webapp path">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/build_path.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_package_id" purpose="Windows - Validate if package ID is used as expansion field" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/package_id.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_apk_name" purpose="Windows - Validate if apk name contains versionCode" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/apk_name.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_app_name" purpose="Windows - Validate if app name could contains whitespace">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/app_name.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="auto" id="Crosswalk_check_host" purpose="Windows - Validate if check command can test host setup" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/check_host.py</test_script_entry>
        </description>
      </testcase>
    </set>
    <set name="common_module" type="nodeunit">
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_application" purpose="Windows - Validate if the config and log message are correct when create a new project" subcase="10">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/application.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_finite_progress" purpose="Windows - Validate if a finite progress can be created" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/finite-progress.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_infinite_progress" purpose="Windows - Validate if a infinite progress can be created" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/infinite-progress.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_logfile_output" purpose="Windows - Validate if output all log message include error, warning and so on to logfile" subcase="5">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/logfile-output.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_manifest" purpose="Windows - Validate if app version and target Platforms are in manifest file" subcase="13">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/manifest.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_output_tee" purpose="Windows - Validate if output all log message include error, warning and so on" subcase="6">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/output-tee.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_platform_base" purpose="Windows - Validate if platform project template can be generated and platform project can be updated to latest Crosswalk" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/platform-base.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_platform_info" purpose="Windows - Validate if App Tool support instantiate platform backend and can print the info of platform" subcase="3">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/platform-info.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_platforms_manager" purpose="Windows - Validate if App Tool support load default backend for loaded platform" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/platforms-manager.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_template_file" purpose="Windows - Validate if App Tool support create/write/read a template file" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/template-file.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_test_util" purpose="Windows - Validate if a temp directory/file can be created under folder test-tmp" subcase="3">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/test/test-util.js</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/Common Module" execution_type="auto" id="Crosswalk_windows_main" purpose="Windows - Validate if project can be created with windows platforms" subcase="2">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/tools/crosswalk-app-tools/windows/test/main.js</test_script_entry>
        </description>
      </testcase>
    </set>
    <set name="CLI_manual" type="js">
      <testcase component="Crosswalk App Tools/CLI" execution_type="manual" id="AppTools_Help" purpose="Windows - Validate if all usages work well as description">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/AppTools_Help.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="manual" id="Check_VersionName" purpose="Windows - Validate if versionName is from manifest version code">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/Check_VersionName.html</test_script_entry>
        </description>
      </testcase>
      <testcase component="Crosswalk App Tools/CLI" execution_type="manual" id="Check_Vendor" purpose="Windows - Validate if Vendor is from the package ID by default instead and is changed by adding the xwalk_windows_vendor field to the web manifest manually">
        <description>
          <test_script_entry>/opt/apptools-windows-tests/apptools/Check_Vendor.html</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
