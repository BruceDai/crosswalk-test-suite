<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="./testcase.xsl"?>
<test_definition>
  <suite category="Cordova Features" name="cordova-webapp-android-tests">
    <set name="WebApp_auto" type="pyunit">
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Project_Create" purpose="Validate Crosswalk Cordova WebApp project could be created successful">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_create.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Project_Build" purpose="Validate Crosswalk Cordova WebApp Project could be builded successful">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_build.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Project_Run" purpose="Validate Crosswalk Cordova app project could be installed and runing on device">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_run.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Install" purpose="Validate Cordova WebApp could be installed successfully">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_install.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Launch" purpose="Validate Cordova WebApp could be launched successfully">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_launch.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Close" purpose="Validate Cordova WebApp could be closed successfully">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_close.py</test_script_entry>
        </description>
      </testcase>
      <testcase component="Cordova Features/WebApp" execution_type="auto" id="Crosswalk_Cordova_WebApp_Uninstall" purpose="Validate Cordova WebApp could be uninstalled successfully">
        <description>
          <test_script_entry>/opt/cordova-webapp-android-tests/webapp/webapp_uninstall.py</test_script_entry>
        </description>
      </testcase>
    </set>
  </suite>
</test_definition>
